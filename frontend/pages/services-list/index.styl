@import '../colors.styl'
@import '../base.styl'

section.about-us-img
    background-color: #06070c;
    color: white;
    background-size: cover !important;
    background-position-x: center !important;

    h3
        color: white;
        font-weight: bold;
    h4
        color: white;
    
    p
        margin-top: 20px;
        color: #aeb1be;

section.recall-big
    ul
        display: flex;
        position: relative;
        margin-top: 20px;
        align-items: center;
        justify-content: start;
        margin: 15px 0;

        li
            width: 10px;
            height: 10px;
            margin-right: 15px;
            border-radius: 50%;
            background: #e8e9ee;
            opacity: 1 !important;
            border: none;

            &.active, &:hover
                background: $main-color;
                transform: scale(1.4);

    .team
        p
            font-size: 24px;
            line-height: 1.33333;
            font-weight: 200;
            color: $text-color-bold

        span.quote
            display: block;
            font-size: 30px;
            color: #aeb1be;
            margin-bottom: 10px;

        .team_info
            .name
                font-size: 20px;
                line-height: 1.2;
                color: $main-color;

            .dev
                color: #aeb1be;
                font-size: 15px;
                margin: 0;

@media only screen and (max-width: 760px)
    .team
        margin-bottom: 30px;