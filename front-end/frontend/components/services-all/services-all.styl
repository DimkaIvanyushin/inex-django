@import '../../pages/colors.styl'
    
section.services
    .lists-row
        display: flex;
        justify-content: center;
        align-content: center;

        h4.title
            border-bottom: 1px solid $main-color;
            padding-bottom: 10px;
            display: inline-block;
            margin: 40px 0;

        .item-old
            position: relative;
            overflow: hidden;
            margin-bottom: 25px;

            .box-images
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    height: 250px;
                    overflow: hidden;

                a.box-images-hf
                    position: relative;
                    width: 100%;
                    height: 100%;
                    
                    &::after
                        content: '';
                        position: absolute;
                        top: 0;
                        left: 0;
                        width: 100%;
                        height: 100%;
                        background: transparent;

                        transition: background 0.5s ease;

                    &:hover
                        &::after
                            background: rgba(45, 55, 66, 0.3);
                            transition: background 0.5s ease;
                        

                    img 
                        height: 100%;

            a
                display: block;
                color: $text-color-bold
                font-size: 20px;
                margin-top: 10px;
                line-height: 20px;

                &:hover
                    color: $main-color;

        .item
            position: relative;
            overflow: hidden;
            height: 250px;

            &:hover
                img 
                    transform: scale(1.4);
                    transition: transform 4s ease;

            img 
                position relative
                height: 100%;
                z-index: 1;
                transform: scale(1);
                transition: transform 2s ease;
            
            .solutions-caption
                position: absolute;
                top: 0;
                left: 0;
                z-index: 2;
                width: 100%;
                height: 100%;
                background: #00000052;
                padding: 15px;
                display: flex;
                align-items: flex-end;

                a
                    position: relative;
                    color: white;
                    padding-bottom: 10px;
                    font-size: 20px;
                    line-height: 20px;
                    transition: text-shadow 0.5s ease;

                    &::after
                        content: '';
                        position: absolute;
                        left: 0;
                        bottom: 0;
                        width: 100%;
                        height: 1px;
                        background: $main-color;
                        transform: scale(0);
                        transition: transform 0.5s ease;

                    &:hover
                        text-shadow: 0px 0px 5px #0000008a;
                        transition: text-shadow 0.5s ease;

                        &::after
                            transform: scale(1);
                            transition: transform 0.5s ease;
                

@media only screen and (max-width: 760px)
    section.services
        .item
            margin-bottom: 30px;

            .box-images
                height: 290px !important;

        .item-old
            margin-bottom: 30px;

            .box-images
                height: 290px !important;

        img 
            width: 100%;