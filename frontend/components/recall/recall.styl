@import '../../pages/colors.styl'
    
section.recall
    ul
        display: flex;
        position: relative;
        margin-top: 20px;

        li
            width: 10px;
            height: 10px;
            margin-right: 15px;
            border-radius: 50%;
            background: #e8e9ee;
            opacity: 1 !important;
            border: none;

            &.active, &:hover
                background: $main-color;
                transform: scale(1.4);

    .team
        .team_info
            .name
                font-size: 20px;
                line-height: 1.2;
                color: $main-color;

            .dev
                color: #aeb1be;
                font-size: 15px;