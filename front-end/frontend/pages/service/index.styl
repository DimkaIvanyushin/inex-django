        .description
            margin-top: 25px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: justify;

    section.tabs

        ul.nav.nav-tabs
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            border-bottom: none;
            margin-bottom: 20px;

        .tab-content
            padding: 20px 0;

            .tab-pane
                padding: 0;

                ul  
                    li
                        margin-bottom: 10px;

    section.solutions
        .solutions-box
            margin-bottom: 10px;