@import '../../pages/colors.styl'
    
section.last-blog
    .post
        a
            position: relative;
            display: block;

            &.blackout
                overflow: hidden;
                width: 100%
                max-height: 360px;

                &:before
                    content: '';
                    position: absolute;
                    background: transparent;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    transition: background .5s ease;

                &:hover
                    &:before
                        background: #2d37424d;
                        transition: background .5s ease;
        
        h4
            a
                color: $main-color;
        ul
            margin-top: 15px;

            li
                padding-left: 20px;
                padding-right: 20px;
                border-left: 1px solid #e8e9ee;
                border-right: 1px solid #e8e9ee;

                a
                    color: $main-color;

                &:first-child
                    border: none;
                    padding-left: 0;

                &:last-child
                    border: none;
                    padding-right: 0;